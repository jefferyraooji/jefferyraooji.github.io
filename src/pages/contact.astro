---

import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { Icon } from "astro-icon/components";

---

<MainGridLayout title={i18n(I18nKey.contactTitle)} description={i18n(I18nKey.contactDescription)}>
    <!-- Hero Section -->
    <div class="relative overflow-hidden rounded-[var(--radius-large)] mb-8">
        <div class="absolute inset-0 bg-gradient-to-br from-[var(--primary)]/10 via-transparent to-[var(--primary)]/5"></div>
        <div class="relative card-base p-12 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-[var(--primary)] to-[var(--primary)]/80 rounded-full mb-6 shadow-lg">
                <Icon name="material-symbols:mail" class="text-3xl text-white" />
            </div>
            <h1 class="text-4xl font-bold text-[var(--primary)] mb-4">
                {i18n(I18nKey.contactTitle)}
            </h1>
            <p class="text-xl text-[var(--text-color)] opacity-80 max-w-2xl mx-auto leading-relaxed">
                {i18n(I18nKey.contactDescription)}
            </p>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="card-base p-8">
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-[var(--text-color)] mb-2 flex items-center">
                    <Icon name="material-symbols:edit" class="mr-3 text-[var(--primary)]" />
                    Send Message
                </h2>
                <p class="text-[var(--text-color)] opacity-70">Fill out the form below and I'll get back to you as soon as possible.</p>
            </div>
            
            <form
                action="https://formspree.io/f/xdklpqgk"
                method="POST"
                class="space-y-6"
                id="contact-form"
            >
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-semibold text-[var(--text-color)]">
                        {i18n(I18nKey.yourEmail)}
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <Icon name="material-symbols:mail" class="h-5 w-5 text-[var(--text-color)] opacity-50" />
                        </div>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder={i18n(I18nKey.emailPlaceholder)}
                            class="w-full pl-10 pr-4 py-4 border-2 border-[var(--border-color)] rounded-xl bg-[var(--card-bg)] text-[var(--text-color)] focus:outline-none focus:ring-2 focus:ring-[var(--primary)] focus:border-[var(--primary)] transition-all duration-200 hover:border-[var(--primary)]/50"
                        />
                    </div>
                </div>
                
                <div class="space-y-2">
                    <label for="message" class="block text-sm font-semibold text-[var(--text-color)]">
                        {i18n(I18nKey.yourMessage)}
                    </label>
                    <div class="relative">
                        <div class="absolute top-4 left-3 pointer-events-none">
                            <Icon name="material-symbols:chat" class="h-5 w-5 text-[var(--text-color)] opacity-50" />
                        </div>
                        <textarea
                            id="message"
                            name="message"
                            rows="6"
                            required
                            placeholder={i18n(I18nKey.messagePlaceholder)}
                            class="w-full pl-10 pr-4 py-4 border-2 border-[var(--border-color)] rounded-xl bg-[var(--card-bg)] text-[var(--text-color)] focus:outline-none focus:ring-2 focus:ring-[var(--primary)] focus:border-[var(--primary)] transition-all duration-200 hover:border-[var(--primary)]/50 resize-none"
                        ></textarea>
                    </div>
                </div>
                
                <button
                    type="submit"
                    class="w-full bg-gradient-to-r from-[var(--primary)] to-[var(--primary)]/80 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-200 hover:from-[var(--primary)]/90 hover:to-[var(--primary)]/70 hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center space-x-2"
                >
                    <Icon name="material-symbols:send" class="text-xl" />
                    <span>{i18n(I18nKey.send)}</span>
                </button>
            </form>
        </div>

        <!-- Contact Info & Social Links -->
        <div class="space-y-6">
            <!-- Contact Info Card -->
            <div class="card-base p-8">
                <h2 class="text-2xl font-bold text-[var(--text-color)] mb-6 flex items-center">
                    <Icon name="material-symbols:contact-phone" class="mr-3 text-[var(--primary)]" />
                    Get In Touch
                </h2>
                
                <div class="space-y-4">
                    <div class="flex items-center space-x-4 p-4 rounded-lg bg-gradient-to-r from-[var(--primary)]/5 to-transparent border border-[var(--primary)]/10">
                        <div class="flex-shrink-0 w-12 h-12 bg-[var(--primary)]/10 rounded-full flex items-center justify-center">
                            <Icon name="material-symbols:mail" class="text-[var(--primary)] text-xl" />
                        </div>
                        <div>
                            <h3 class="font-semibold text-[var(--text-color)]">Email</h3>
                            <p class="text-[var(--text-color)] opacity-70">jinchengrao76@gmail.com</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-4 p-4 rounded-lg bg-gradient-to-r from-[var(--primary)]/5 to-transparent border border-[var(--primary)]/10">
                        <div class="flex-shrink-0 w-12 h-12 bg-[var(--primary)]/10 rounded-full flex items-center justify-center">
                            <Icon name="material-symbols:location-on" class="text-[var(--primary)] text-xl" />
                        </div>
                        <div>
                            <h3 class="font-semibold text-[var(--text-color)]">Location</h3>
                            <p class="text-[var(--text-color)] opacity-70">Durham, North Carolina</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-4 p-4 rounded-lg bg-gradient-to-r from-[var(--primary)]/5 to-transparent border border-[var(--primary)]/10">
                        <div class="flex-shrink-0 w-12 h-12 bg-[var(--primary)]/10 rounded-full flex items-center justify-center">
                            <Icon name="material-symbols:school" class="text-[var(--primary)] text-xl" />
                        </div>
                        <div>
                            <h3 class="font-semibold text-[var(--text-color)]">University</h3>
                            <p class="text-[var(--text-color)] opacity-70">Duke University</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Social Links Card -->
            <div class="card-base p-8">
                <h2 class="text-2xl font-bold text-[var(--text-color)] mb-6 flex items-center">
                    <Icon name="material-symbols:share" class="mr-3 text-[var(--primary)]" />
                    Connect With Me
                </h2>
                
                <div class="grid grid-cols-1 gap-4">
                    <a
                        href="https://www.linkedin.com/in/jincheng-rao-5a613b25b/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center space-x-4 p-4 rounded-xl bg-gradient-to-r from-blue-500/10 to-blue-600/5 border border-blue-500/20 hover:border-blue-500/40 transition-all duration-200 hover:scale-[1.02]"
                    >
                        <div class="flex-shrink-0 w-12 h-12 bg-blue-500/10 rounded-full flex items-center justify-center group-hover:bg-blue-500/20 transition-colors">
                            <Icon name="fa6-brands:linkedin" class="text-blue-500 text-xl" />
                        </div>
                        <div class="flex-1">
                            <h3 class="font-semibold text-[var(--text-color)] group-hover:text-blue-500 transition-colors">LinkedIn</h3>
                            <p class="text-[var(--text-color)] opacity-70 text-sm">Professional networking</p>
                        </div>
                        <Icon name="material-symbols:arrow-forward" class="text-[var(--text-color)] opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all" />
                    </a>
                    
                    <a
                        href="https://www.instagram.com/jincheng.rao/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center space-x-4 p-4 rounded-xl bg-gradient-to-r from-pink-500/10 to-purple-500/5 border border-pink-500/20 hover:border-pink-500/40 transition-all duration-200 hover:scale-[1.02]"
                    >
                        <div class="flex-shrink-0 w-12 h-12 bg-pink-500/10 rounded-full flex items-center justify-center group-hover:bg-pink-500/20 transition-colors">
                            <Icon name="fa6-brands:instagram" class="text-pink-500 text-xl" />
                        </div>
                        <div class="flex-1">
                            <h3 class="font-semibold text-[var(--text-color)] group-hover:text-pink-500 transition-colors">Instagram</h3>
                            <p class="text-[var(--text-color)] opacity-70 text-sm">Personal moments</p>
                        </div>
                        <Icon name="material-symbols:arrow-forward" class="text-[var(--text-color)] opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all" />
                    </a>
                    
                    <a
                        href="https://github.com/jefferyraooji"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center space-x-4 p-4 rounded-xl bg-gradient-to-r from-gray-500/10 to-gray-600/5 border border-gray-500/20 hover:border-gray-500/40 transition-all duration-200 hover:scale-[1.02]"
                    >
                        <div class="flex-shrink-0 w-12 h-12 bg-gray-500/10 rounded-full flex items-center justify-center group-hover:bg-gray-500/20 transition-colors">
                            <Icon name="fa6-brands:github" class="text-gray-500 text-xl" />
                        </div>
                        <div class="flex-1">
                            <h3 class="font-semibold text-[var(--text-color)] group-hover:text-gray-500 transition-colors">GitHub</h3>
                            <p class="text-[var(--text-color)] opacity-70 text-sm">Code & projects</p>
                        </div>
                        <Icon name="material-symbols:arrow-forward" class="text-[var(--text-color)] opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</MainGridLayout>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contact-form');
        const submitButton = form.querySelector('button[type="submit"]');
        const originalButtonText = submitButton.innerHTML;
        
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // 显示加载状态
            submitButton.innerHTML = `
                <div class="flex items-center justify-center space-x-2">
                    <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                    <span>Sending...</span>
                </div>
            `;
            submitButton.disabled = true;
            
            // 获取表单数据
            const formData = new FormData(form);
            
            // 发送到Formspree
            fetch('https://formspree.io/f/xdklpqgk', {
                method: 'POST',
                body: formData,
                headers: {
                    'Accept': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    // 成功
                    submitButton.innerHTML = `
                        <div class="flex items-center justify-center space-x-2">
                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Message Sent!</span>
                        </div>
                    `;
                    submitButton.classList.remove('bg-gradient-to-r', 'from-[var(--primary)]', 'to-[var(--primary)]/80');
                    submitButton.classList.add('bg-green-500');
                    
                    // 清空表单
                    form.reset();
                    
                    // 3秒后恢复原状
                    setTimeout(() => {
                        submitButton.innerHTML = originalButtonText;
                        submitButton.disabled = false;
                        submitButton.classList.remove('bg-green-500');
                        submitButton.classList.add('bg-gradient-to-r', 'from-[var(--primary)]', 'to-[var(--primary)]/80');
                    }, 3000);
                } else {
                    throw new Error('Network response was not ok');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // 错误处理
                submitButton.innerHTML = `
                    <div class="flex items-center justify-center space-x-2">
                        <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        <span>Error - Try Again</span>
                    </div>
                `;
                submitButton.classList.remove('bg-gradient-to-r', 'from-[var(--primary)]', 'to-[var(--primary)]/80');
                submitButton.classList.add('bg-red-500');
                
                // 3秒后恢复原状
                setTimeout(() => {
                    submitButton.innerHTML = originalButtonText;
                    submitButton.disabled = false;
                    submitButton.classList.remove('bg-red-500');
                    submitButton.classList.add('bg-gradient-to-r', 'from-[var(--primary)]', 'to-[var(--primary)]/80');
                }, 3000);
            });
        });
    });
</script>
